    <aura:attribute name="mapa" type="Map" />
    <aura:attribute name="listaCuentas" type="List" />
    <div>componente1</div>
    <div>estas en el compoentente {!v.myvariable}</div>
    
    <div class="c-container">
        <lightning:button label="conocer el componente" onclick="{!c.llamarAjs}"/>
        <lightning:button label="llamarController" onclick="{!c.doSomething}"/>
        <lightning:button label="sacar un alert" onclick="{!c.handleClick}"/>
        <input type="number" aura:id="entradausuario" label="Escribe un numero:" value="52" />
        <br/>
        <br/>
        <br/>
        <lightning:layout horizontalAlign="space">
            <lightning:layoutItem padding="around-small">
                <div class="custom-box">1</div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small">
                <div class="custom-box">2</div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small">
                <div class="custom-box">3</div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small">
                <div class="custom-box">4</div>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
<aura:handler event="c:myevent" action="{!c.handleEvent}"/>
</aura:component>	
